@require '_mixin'
@require '_font'

html
  box-sizing border-box
  font-size 62.5%

* 
  box-sizing inherit
  margin 0
  padding 0
  
  &:before,
  &:after
    box-sizing inherit
    
a
  cursor pointer
  
h1
  Oswald()
  
h2 
  Dosis()
    
body
  Playfair()
  font-size 1.0em
  min-height 100vh
  overflow-x hidden
  
  > header
    font-size 3.6rem
    position fixed
    width 100%
    z-index 1
    
    > nav
      text-align center
      
      > a
        display inline-block

  > main  
    font-size 1.8rem
  
    > section
      height 100%
      position absolute
      width 80%
      
      &:nth-child(1)
        transform(translateX(-87.5%))
        cursor pointer
        
      &:nth-child(2)
        transform(translateX(12.5%))
        
      &:nth-child(3)
        transform(translateX(112.5%))
        cursor pointer
