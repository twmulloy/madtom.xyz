@require '_mixin'
@require '_font'

html
  box-sizing border-box
  font-size 62.5%

* 
  box-sizing inherit
  margin 0
  outline 0
  padding 0
  
  &:before,
  &:after
    box-sizing inherit
    
a
  cursor pointer
  
h1
  Oswald()
  
h2 
  Dosis()
    
body
  Playfair()
  font-size 1.0em
  
  > header
    font-size 3.6rem
    position fixed
    text-align center
    width 100%
    z-index 1
    
    > a
      display inline-block
      padding 0 2.4rem
      
      &.active
        cursor auto
      

  > main  
    font-size 1.8rem
    padding 10.0rem 0
   