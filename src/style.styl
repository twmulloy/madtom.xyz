@require '_mixin'
@require '_font'

@import '_ease'

white = #fbf9f1
black = #1b1919

mq_small = "screen and (max-width: 600px)"
mq_beyond = "screen and (min-width: 1200px)"

html
  box-sizing border-box
  font-size 62.5%

* 
  box-sizing inherit
  margin 0
  outline 0
  padding 0
  
  &:before,
  &:after
    box-sizing inherit
    
a
  color inherit
  cursor pointer

i[class^='icon-']
  font-size 12.8rem

.cover
  transition opacity 600ms $easeInOutCubic, visibility 600ms $easeInOutCubic
  background-color black
  height 1000%
  position absolute
  top 0
  width 100%
  
.svg
  background-position center center
  background-repeat no-repeat
  background-size cover
  height 100px
  width 200px

body
  Playfair()
  background-color white
  color $black
  font-size 1.0em
  overflow-y scroll

  > main  
    font-size 1.6rem
   
    .page
      min-height 100vh
      position relative
                
      .content
        padding 4.0rem
        
	      header
          margin-bottom .1rem
          
          h1
            Oswald(6.4rem)
            word-spacing 2.0rem
            
        .divider
          border-top .1rem solid black
          border-bottom .1rem solid black
          padding .1rem 0
          
          .inner
            Playfair(1.6rem, 700, true)
            border-top .1rem solid black
            border-bottom .3rem solid black
            line-height 2
            text-align center
            text-transform uppercase
            word-spacing .5rem
           
        main          
          vendor 'column-count', 2
          vendor 'column-gap', 1.5rem
          vendor 'column-rule', .1rem solid black
          
          article
            h2, h3
              Dosis(3.2rem, 700)
              
              &:after
                background-color black
                border-bottom .1rem solid black
                content ''
                display block
                height 0
                margin 0 auto
                margin-top 1.0rem
                position relative
                width 50%
                
            h3
              Playfair(2.4rem, 700, false)
              
            p
              vendor 'word-break', break-all
              vendor 'hyphens', auto
              
              line-height 1.5
              text-align justify
              text-indent 4.0rem
              word-break break-word
              
          .span-all
            vendor 'column-span', all
              
          @media mq_small
            vendor 'column-count', 1
            
          @media mq_beyond
            vendor 'column-count', 3
              

     
      &.slick-slide
        .cover
          opacity .05
          visibility visible
      
      &.slick-center
        .cover
          opacity 0
          visibility hidden
          