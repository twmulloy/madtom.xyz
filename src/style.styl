@require '_mixin'
@require '_font'

@import '_ease'

white = #fbf9f1
black = #1b1919

mq_small = "screen and (max-width: 600px)"
mq_beyond = "screen and (min-width: 1200px)"

html
  box-sizing border-box
  font-size 62.5%

* 
  box-sizing inherit
  margin 0
  outline 0
  padding 0
  
  &:before,
  &:after
    box-sizing inherit
    
a
  color inherit
  cursor pointer

.cover
  transition opacity 250ms $easeInOutCubic, visibility 250ms $easeInOutCubic
  background-color black
  height 1000%
  position absolute
  top 0
  width 100%
  
.span-all
  vendor 'column-span', all

body
  Playfair()
  background-color white
  color $black
  font-size 1.0em
  overflow-y scroll

  > main  
    font-size 1.6rem
    
    .slick-list

      &.draggable
        cursor -webkit-grab
        cursor grab
        &:active
          cursor -webkit-grabbing
          cursor grabbing

    .page
      min-height 100vh
      position relative
                
      .content
        padding 4.0rem
        
	      header
          margin-bottom 1.0rem
          text-align justify
          
          h1
            Oswald 6.4rem
            word-spacing 2.0rem
            
        .divider
          border-top .1rem solid black
          border-bottom .1rem solid black
          padding .1rem 0
          
          .inner
            Playfair 1.6rem, 700, true
            border-top .1rem solid black
            border-bottom .3rem solid black
            line-height 2
            text-align center
            text-transform uppercase
            word-spacing .5rem
           
        main          
          vendor 'column-count', 2
          vendor 'column-gap', 1.5rem
          vendor 'column-rule', .1rem solid black
          
          article
            h2
              Dosis 3.2rem, 700
              line 25%  
            h3
              Playfair 2.4rem, 700, false
              line 25%
            p
              vendor 'word-break', break-all
              vendor 'hyphens', auto
              
              line-height 1.5
              text-align justify
              text-indent 2.0rem
              word-break break-word
              
            *:last-child
              margin-bottom .5rem
              
          @media mq_small
            vendor 'column-count', 1
            
          @media mq_beyond
            vendor 'column-count', 3
              

     
      &.slick-slide
        .cover
          cursor pointer
          opacity .03
          visibility visible
          
          &:hover
            transition opacity 250ms $easeInOutCubic
            opacity 0
            
      
      &.slick-center
        transition box-shadow 250ms $easeInOutCubic 500ms

        background-color white
        box-shadow 0 0 .3rem rgba(27, 25, 25, .1)
        z-index 1
        
        .cover
          opacity 0
          visibility hidden
          

      